{
  "Environment": {
    "Name": "Development"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Warning",
        "System": "Error"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "Console",
        "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}][{Level:u3}][{Message:lj}][DATA>]{Properties:j}[<DATA]{NewLine}{Exception}"
      },
      {
        "Name": "File",
        "Args": {
          "path": ".\\logs\\CompendiumFramework\\log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 100,
          "fileSizeLimitBytes": 1000000, // 1 MB
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}][{Level:u3}][{Message:lj}][DATA>]{Properties:j}[<DATA]{NewLine}{Exception}"
        }
      }
    ]
  }
}