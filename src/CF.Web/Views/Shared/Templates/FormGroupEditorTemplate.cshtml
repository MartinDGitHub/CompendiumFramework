@using CF.Web.Models.Shared
@model FormGroupEditorTemplateModel
    <div class="@Model.ColClass">
        <div class="form-group row">
            <label asp-for-expr="Model" class="@Model.LabelColClass col-form-label"  input-type-classes="checkbox.form-check-label"></label>
            <div class="@Model.ControlColClass">
                @*Put the form-control class on non-checkbox inputs.*@
                <input asp-for-expr="Model" is-read-only="@Model.IsReadOnly" is-disabled="@Model.IsDisabled" input-type-classes="checkbox.form-check-input;^((?!checkbox).)*$.form-control" />
                <span asp-validation-for-expr="Model" class="text-danger"></span>
            </div>
        </div>
    </div>
